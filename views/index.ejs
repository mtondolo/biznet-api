<!DOCTYPE html>
<html ng-app="comesApp">
<head>
  <title>COMESA News</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
  <body ng-controller="newsitemController">

    <div class="container">

      <!-- Form to save data through the endpoint-->
      <div class="col-sm-6">
        <form ng-submit="saveNewsItem(newsitem)">
          <div class="form-group">
            <input type="text" placeholder="Headline" ng-model="newsitem.headline" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" placeholder="Story Url" ng-model="newsitem.storyUrl" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" placeholder="Date" ng-model="newsitem.date" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" placeholder="Image Url" ng-model="newsitem.imageUrl" class="form-control">
          </div>
          <div class="form-group">
            <input type="text" placeholder="Image Description" ng-model="newsitem.imageDescription" class="form-control">
          </div>
          <button type="submit" class="btn btn-primary">Submit</button>
        </form>
      </div>
      
      <!-- List to display data throung the endpoint-->
      <div class="col-sm-6">
        <ul class="list-group">
          <li class="list-group-item" ng-repeat="newsitem in newsitems">
            <h4>{{newsitem.headline}}</h4>
            <p>{{newsitem.storyUrl}}</p>
            <p>{{newsitem.author}}</p>
            <p>{{newsitem.imageUrl}}</p>
            <p>{{newsitem.imageDescription}}</p>
          </li>
        </ul>
      </div>

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
    <script src="app.js"></script>
  </body>
</html>